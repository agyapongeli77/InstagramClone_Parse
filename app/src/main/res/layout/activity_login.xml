<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/gradient_background"
    android:orientation="vertical"
    android:gravity="center_horizontal"
    tools:context=".LoginActivity">



    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="70dp"
        android:layout_marginTop="150dp"
        android:layout_marginBottom="30dp"
        android:src="@drawable/nux_dayone_landing_logo"/>

    <EditText
        android:id="@+id/etUsername"
        android:layout_width="350dp"
        android:layout_height="wrap_content"
        android:ems="10"
        android:hint="Username"
        android:textColorHint="#66ffffff"
        android:padding="14dp"
        android:textColor="@android:color/white"
        android:background="@drawable/edit_text_background"
        android:layout_marginBottom="15dp"
        android:inputType="textEmailAddress"/>


    <EditText
        android:id="@+id/etPassword"
        android:layout_width="350dp"
        android:layout_height="wrap_content"
        android:ems="10"
        android:hint="Password"
        android:textColorHint="#66ffffff"
        android:textColor="@android:color/white"
        android:padding="14dp"
        android:background="@drawable/edit_text_background"
        android:layout_marginBottom="15dp"
        android:inputType="textPassword"/>

    <Button
        android:id="@+id/btnLogin"
        android:layout_width="350dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:background="@drawable/mainscreen_login_bg"
        android:text="Log In"
        android:textSize="18sp"
        android:textColor="#A6ffffff"
        android:layout_marginBottom="15dp"
        android:inputType="textCapWords"/>

    <TextView
        android:id="@+id/forgot_password_text_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Forgot Your Password?"
        android:gravity="center_horizontal"
        android:layout_marginBottom="5dp"
        android:textStyle="bold"
        android:textColor="#A6ffffff"
        />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <View
            android:id="@+id/left_line"
            android:layout_width="160dp"
            android:layout_height="1dp"
            android:layout_marginLeft="22dp"
            android:background="@android:color/darker_gray"
            android:layout_centerVertical="true"/>


        <TextView
            android:id="@+id/or_text_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="15sp"
            android:layout_toRightOf="@id/left_line"
            android:paddingTop="3dp"
            android:textColor="#A6ffffff"
            android:paddingRight="7dp"
            android:paddingLeft="7dp"
            android:paddingBottom="5dp"
            android:text="OR"/>


        <View
            android:id="@+id/right_line"
            android:layout_width="160dp"
            android:layout_height="1dp"
            android:layout_marginRight="22dp"
            android:layout_toRightOf="@+id/or_text_view"
            android:background="@android:color/darker_gray"
            android:layout_centerVertical="true"/>

    </RelativeLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_facebook_icon"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingTop="2dp"
            android:textColor="#A6ffffff"
            android:text="Log in with Facebook"
            android:textStyle="bold" />

    </LinearLayout>


    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginTop="195dp"
        android:background="@android:color/darker_gray"
        android:layout_centerVertical="true"/>


    <LinearLayout
        android:id="@+id/sign_up_linear_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:gravity="center_horizontal"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="Don't have an account?"
            android:textColor="#A6ffffff" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=" Sign up."
            android:textStyle="bold"
            android:textColor="#A6ffffff" />

    </LinearLayout>


</LinearLayout>